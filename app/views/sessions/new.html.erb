<h2>Please enter your email and password to login:</h2>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <%= f.label :email, 'Username:' %>
  <%= f.text_field :email %><br><br>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %><br><br>
  <%= f.submit 'Login' %>
<% end %>
